<body>
  <div class="calculator">
    <h2>Rich Media Cost Calculator</h2>
    <div class="row">
      <label for="numberOfFormats">Number of Formats:</label>
      <input type="number" id="numberOfFormats" inputmode="numeric">
    </div>
    <div class="row">
      <label for="numberOfVersions">Number of Versions:</label>
      <input type="number" id="numberOfVersions" inputmode="numeric">
    </div>
    <div class="row">
      <label for="numberOfImpressions">Number of Impressions:</label>
      <input type="number" id="numberOfImpressions" inputmode="numeric">
    </div>
    <button onclick="calculate()">Calculate</button>
    <p id="result" style="display: none;"></p>
  </div>
