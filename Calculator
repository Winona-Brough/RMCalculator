  <script>
    function calculate() {
      var numberOfFormats = Math.max(0, parseInt(document.getElementById('numberOfFormats').value) || 0); // Set minimum value as 0
      var numberOfVersions = Math.max(0, parseInt(document.getElementById('numberOfVersions').value) || 0); // Set minimum value as 0
      var numberOfImpressions = Math.max(0, parseInt(document.getElementById('numberOfImpressions').value) || 0); // Set minimum value as 0

      var result = ((numberOfFormats * numberOfVersions) * 680) + (numberOfImpressions / 1000 * 2);
      result = result.toFixed(2); // Round the result to 2 decimal places
      
      var resultElement = document.getElementById('result');
      resultElement.innerHTML = '<span class="label">Total Production Cost = </span><span class="value">$' + result + '</span>'; // Display the rounded result with different font colors
      
      if (result === "0.00") {
        resultElement.style.display = 'none'; // Hide the result element if the result is 0
      } else {
        resultElement.style.display = 'block'; // Show the result element if the result is not 0
      }
    }
  </script>
